<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
<div class="ui inverted segment" id="form-segment">
    <h1>Edit Blog</h1>
    <div class="ui divider"></div>
    <div class="ui inverted form">
        <div class="stacked segment">
            <div class="field">
            <label>Title</label>
            <input placeholder="Title" name="title" type="text" value="<%= blog.title %>">
            </div>

            <div class="field">
            <label>Content</label>
            <textarea name="content" placeholder="Content" style="margin-top: 0px; margin-bottom: 0px; height: 177px;"><%= blog.content %></textarea>
            </div>
            
            <div class="field">
            <label>Image URL</label>
            <input placeholder="ImgaeURL" value="<%= blog.image %>" name="image" type="text">
            </div>
            <button class="ui primary button" type="submit">
                    Submit
            </button>
            </div>
        </div>
    </div>
</div>
</form>
<% include partials/footer %>


